 				fw_priv->fw_name);
@@ -521,8 +519,6 @@ fw_get_filesystem_firmware(struct device *device, struct fw_priv *fw_priv,
 				continue;
 			}
 		} else {
-			dev_dbg(device, "direct-loading %s\n",
-				fw_priv->fw_name);
