index 95d21b4..1f72c26 100644
--- a/drivers/base/firmware_loader/main.c
+++ b/drivers/base/firmware_loader/main.c
@@ -501,14 +501,12 @@ fw_get_filesystem_firmware(struct device *device, struct fw_priv *fw_priv,
 		rc = kernel_read_file_from_path(path, &buffer, &size,
 						msize, id);
 		if (rc) {
-			if (rc != -ENOENT)
